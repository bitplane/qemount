CONFIG_TEST1=y
CONFIG_FEATURE_TEST_64=y
CONFIG_EXPR=y
CONFIG_FEATURE_SH_MATH=y
CONFIG_FEATURE_SH_MATH_64=y
CONFIG_FEATURE_EVALUATE_NESTED_COMMANDS=y
CONFIG_WHICH=y
CONFIG_FEATURE_FIND_TYPE=y
CONFIG_FEATURE_FIND_EXEC=y
