# filesystems.config for Linux 2.6.39
#
# Kernel configuration options to enable maximum filesystem support for qemount.
# Drivers are set to =y (built-in) for simplicity and immediate availability.
# Note: Some newer filesystems from 6.11 config are not available in 2.6.39

# -- Linux Native & Related Filesystems --
CONFIG_EXT2_FS=y
CONFIG_EXT3_FS=y
CONFIG_EXT4_FS=y
CONFIG_REISERFS_FS=y
CONFIG_JFS_FS=y
CONFIG_XFS_FS=y
CONFIG_XFS_POSIX_ACL=y
CONFIG_GFS2_FS=y
CONFIG_BTRFS_FS=y
CONFIG_BTRFS_FS_POSIX_ACL=y
CONFIG_NILFS2_FS=y
# Note: F2FS added in 3.8, not available in 2.6.39
# Note: BCACHEFS added much later, not available in 2.6.39
# Note: EROFS added in 4.19, not available in 2.6.39

# -- DOS/Windows/FAT/NTFS Filesystems --
CONFIG_FAT_FS=y
CONFIG_MSDOS_FS=y
CONFIG_VFAT_FS=y
CONFIG_FAT_DEFAULT_CODEPAGE=437
CONFIG_FAT_DEFAULT_IOCHARSET="iso8859-1"
# Note: exFAT not available in 2.6.39 (added later)
# Note: NTFS3 not available in 2.6.39 (added in 5.15)
# Use old NTFS driver (read-only with limited write)
CONFIG_NTFS_FS=y

# -- CD-ROM / DVD / Optical Filesystems --
CONFIG_ISO9660_FS=y
CONFIG_JOLIET=y
CONFIG_ZISOFS=y
CONFIG_UDF_FS=y

# -- macOS / Apple Filesystems --
CONFIG_HFS_FS=y
CONFIG_HFSPLUS_FS=y

# -- Other/Miscellaneous Filesystems --
CONFIG_ADFS_FS=y
CONFIG_AFFS_FS=y
CONFIG_BEFS_FS=y
CONFIG_BFS_FS=y
CONFIG_EFS_FS=y
CONFIG_CRAMFS=y
CONFIG_SQUASHFS=y
CONFIG_SQUASHFS_ZLIB=y
CONFIG_SQUASHFS_LZO=y
# Note: SquashFS XZ/LZ4/ZSTD compression added later
CONFIG_MINIX_FS=y
CONFIG_OMFS_FS=y
CONFIG_HPFS_FS=y
CONFIG_QNX4FS_FS=y
# Note: QNX6FS added in 3.6, not available in 2.6.39
CONFIG_ROMFS_FS=y
CONFIG_SYSV_FS=y
CONFIG_UFS_FS=y
CONFIG_UFS_FS_WRITE=y
CONFIG_VXFS_FS=y

# -- Encrypted/Layered Filesystems --
CONFIG_ECRYPT_FS=y

# -- Flash Filesystems --
CONFIG_JFFS2_FS=y
CONFIG_UBIFS_FS=y

# -- Cluster/Object Filesystems --
CONFIG_OCFS2_FS=y
CONFIG_EXOFS_FS=y

# -- Legacy Network Filesystems --
CONFIG_NCP_FS=y

# -- Kernel Config Filesystem --
CONFIG_CONFIGFS_FS=y

# -- Network Filesystems --
CONFIG_NFS_FS=y
CONFIG_NFS_V3=y
CONFIG_NFS_V3_ACL=y
CONFIG_NFS_V4=y
CONFIG_NFSD=y
CONFIG_CIFS=y
# Note: SMB_SERVER not available in 2.6.39
CONFIG_CEPH_FS=y
CONFIG_CODA_FS=y
CONFIG_AFS_FS=y
# 9P already enabled in kernel.config

# -- Filesystem Support Options & Features --
CONFIG_FUSE_FS=y
CONFIG_FS_POSIX_ACL=y
CONFIG_EXT4_FS_POSIX_ACL=y
CONFIG_FS_SECURITY=y
CONFIG_EXT4_FS_SECURITY=y
CONFIG_QUOTA=y
CONFIG_QUOTACTL=y
CONFIG_QFMT_V1=y
CONFIG_QFMT_V2=y
CONFIG_AUTOFS4_FS=y

# -- Native Language Support (NLS) --
CONFIG_NLS=y
CONFIG_NLS_DEFAULT="utf8"
CONFIG_NLS_CODEPAGE_437=y
CONFIG_NLS_CODEPAGE_850=y
CONFIG_NLS_ASCII=y
CONFIG_NLS_ISO8859_1=y
CONFIG_NLS_ISO8859_2=y
CONFIG_NLS_ISO8859_3=y
CONFIG_NLS_ISO8859_4=y
CONFIG_NLS_ISO8859_5=y
CONFIG_NLS_ISO8859_6=y
CONFIG_NLS_ISO8859_7=y
CONFIG_NLS_ISO8859_9=y
CONFIG_NLS_ISO8859_13=y
CONFIG_NLS_ISO8859_14=y
CONFIG_NLS_ISO8859_15=y
CONFIG_NLS_KOI8_R=y
CONFIG_NLS_KOI8_U=y
CONFIG_NLS_UTF8=y

# -- Core Dependencies --
CONFIG_JBD=y
CONFIG_JBD2=y
CONFIG_FS_MBCACHE=y
CONFIG_CRC32=y
CONFIG_LIBCRC32C=y
CONFIG_CRYPTO_CRC32C=y
CONFIG_ZLIB_INFLATE=y
CONFIG_LZO_DECOMPRESS=y
