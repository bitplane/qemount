#!/bin/sh

if [ -e "$PORT_PATH" ]; then
  echo "[INFO] Starting Dropbear on $PORT_PATH..."
  while true; do
    echo "[INFO] Waiting for SSH connection..."
    exec 3<>"$PORT_PATH"
    exec 0<&3
    exec 1>&3
    exec 2>&3
    dropbear -i || /bin/sh
  done

else
  echo "[ERROR] SSH FD not found: $PORT_PATH"
fi

